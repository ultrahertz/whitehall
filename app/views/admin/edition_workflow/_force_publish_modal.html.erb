<% modal ||= false %>

<% if modal %>
  <div id="forcePublishModal" class="modal" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h3 class="modal-title">Why are you force publishing this?</h3>
        </div>
        <%= form_tag force_publish_admin_edition_path(@edition, lock_version: @edition.lock_version) do %>
          <div class="modal-body">
            <p class="alert alert-warning">You should only force publish documents when no other editor is available to review and publish your work, for example out of hours or in an emergency.</p>

            <div class="form-group">
              <%= label_tag :reason, 'Reason for force publishing' %>
              <%= text_field_tag :reason, nil, {class: 'form-control'} %>
            </div>
          </div>
          <div class="modal-footer">
            <%= submit_tag "Force publish", class: "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <h1>Why are you force publishing this?</h1>
  <p class="alert alert-warning">You should only force publish documents when no other editor is available to review and publish your work, for example out of hours or in an emergency.</p>
  <%= form_tag force_publish_admin_edition_path(@edition, lock_version: @edition.lock_version), class: 'well' do %>

    <div class="form-group">
      <%= label_tag :reason, 'Reason for force publishing' %>
      <%= text_field_tag :reason, nil, {class: 'form-control input-md-6'} %>
    </div>

    <%= submit_tag "Force publish", class: "btn btn-warning" %>
  <% end %>
<% end %>
